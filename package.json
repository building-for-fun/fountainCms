{
  "name": "fountaincms",
  "version": "1.0.0",
  "description": "Monorepo for FountainCMS ecosystem (frontend and backend)",
  "repository": {
    "type": "git",
    "url": "https://github.com/building-for-fun/fountainCms"
  },
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:backend": "npm run dev --workspace=backend",
    "prepare": "husky || true"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^20.0.0",
    "@commitlint/config-conventional": "^20.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.1"
  },
  "lint-staged": {
    "frontend/src/**/*.{js,jsx,ts,tsx}": [
      "npm run lint --workspace=frontend",
      "npm run format --workspace=frontend"
    ],
    "backend/src/**/*.{js,jsx,ts,tsx}": [
      "npm run lint --workspace=backend",
      "npm run format --workspace=backend"
    ]
  }
}
